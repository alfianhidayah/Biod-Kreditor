<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bg_status"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:background="#da4749"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    >


    <!--Nama Barang-->
    <TextView
        android:id="@+id/namaBarang"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HP Xiaomi Readme 3"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        />

    <!--Jenis Angsuran, Angsuran, Uang Muka dan Status-->

    <LinearLayout
        android:layout_marginTop="5dp"
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <LinearLayout
            android:layout_marginLeft="25dp"
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:orientation="vertical"
            >

            <!--Jenis Angsuran-->

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/titleJenisAngsuran"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#FFFFFF"
                    android:text="Jenis Angsuran : "/>

                <TextView
                    android:id="@+id/jenisAngsuran"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#FFFFFF"
                    android:text="Mingguan"/>

            </LinearLayout>

            <!--Angsuran-->

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/titleAngsuran"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#FFFFFF"
                    android:text="Angsuran : "/>

                <TextView
                    android:id="@+id/angsuran"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#FFFFFF"
                    android:text="Rp 100.000"/>

            </LinearLayout>

            <!--Uang Muka-->

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/titleUangMuka"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#FFFFFF"
                    android:text="Uang Muka : "/>

                <TextView
                    android:id="@+id/uangMuka"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#FFFFFF"
                    android:text="Rp 2.000.000"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <!--Yang Harus Dibayar, Pembayaran Masuk, Sisa-->

    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginLeft="25dp"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:orientation="vertical"
            >

            <!--Yang Harus Dibayar-->

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/titleHarusDibayar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#FFFFFF"
                    android:text="Yang Harus Dibayar"/>
                
                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/rectangle"/>

                <TextView
                    android:layout_marginLeft="30dp"
                    android:id="@+id/harusDibayar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#FFFFFF"
                    android:text="Rp. 18.000.000"/>


            </LinearLayout>

            <!--Pembayaran Masuk-->

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/titlePembayaranMasuk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#FFFFFF"
                    android:text="Pembayaran Masuk"/>

                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="29dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/rectangle"/>

                <TextView
                    android:id="@+id/pembayaranMasuk"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#FFFFFF"
                    android:text="Rp. 5.000.000"/>

            </LinearLayout>

            <!--Sisa Pembayaran-->

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/titleSisaPembayaran"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#FFFFFF"
                    android:text="Sisa Pembayaran"/>

                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="45dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/rectangle"/>

                <TextView
                    android:id="@+id/sisaPembayaran"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#FFFFFF"
                    android:text="Rp. 13.000.000"/>

            </LinearLayout>

<!--            Status Kredit-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/titleStatusKredit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#FFFFFF"
                    android:text="Status Kredit "/>

                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="70dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/rectangle"/>

                <TextView
                    android:id="@+id/statusKredit"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#FFEB3B"
                    android:text="Belum Lunas"/>

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>




</LinearLayout>